<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic specifically for the emulator loopback address -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- If testing on a physical device using your local machine's IP, add that too: -->
        <!-- <domain includeSubdomains="true">YOUR_LOCAL_IPV4_ADDRESS</domain> -->
    </domain-config>
    <!-- You can add base-config here if needed for default HTTPS enforcement later -->
    <base-config cleartextTrafficPermitted="false" />
</network-security-config>